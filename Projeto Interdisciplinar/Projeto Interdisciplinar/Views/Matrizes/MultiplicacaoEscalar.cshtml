@model MatrizViewModel

@{
    ViewData["Title"] = "Multiplicação Escalar";
    Layout = "_LayoutMatrizes";
}

<style>
    .matrix-input {
        min-width: 52px;
        padding: 4px;
        box-sizing: border-box;
    }

    .matrix-table td {
        padding: 4px;
        vertical-align: middle;
        background-color: white;
    }

    .matrix-wrap {
        overflow: auto;
    }

    .result-table {
        max-width: 600px;
        background-color: white;
    }

    /* Pequeno ajuste para o campo do escalar */
    .escalar-input {
        width: 140px;
        margin: 0 auto;
    }
</style>

<h3 class="mb-4 text-center">Multiplicação Escalar</h3>

<form method="post" class="text-center">

    <!-- Dimensões (centradas) -->
    <div class="row justify-content-center mb-4 text-center">
        <div class="col-auto">
            <label class="form-label d-block">Linhas</label>
            <input type="number"
                   name="Linhas"
                   class="form-control text-center"
                   min="1" max="30"
                   value="@(Model.Linhas > 0 ? Model.Linhas : "")"
                   required />
        </div>

        <div class="col-auto">
            <label class="form-label d-block">Colunas</label>
            <input type="number"
                   name="Colunas"
                   class="form-control text-center"
                   min="1" max="30"
                   value="@(Model.Colunas > 0 ? Model.Colunas : "")"
                   required />
        </div>

        <div class="col-auto d-flex align-items-end">
            <button type="submit" class="btn btn-primary" style="margin-right:5px;">
                Criar Matriz
            </button>

            <button type="button"
                    class="btn btn-secondary"
                    onclick="preencherAleatorio()">
                Preencher Aleatoriamente <i class="bi bi-pencil"></i>
            </button>
        </div>
    </div>

    @if (Model.Linhas > 0 && Model.Colunas > 0)
    {
        <!-- Matriz A -->
        <div class="row justify-content-center mb-3 text-center">
            <div class="col-auto">
                <h5>Matriz A</h5>
                <div class="matrix-wrap">
                    <table class="table table-bordered text-center mx-auto matrix-table">
                        <tbody>
                            @for (int i = 0; i < Model.Linhas; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < Model.Colunas; j++)
                                    {
                                        <td>
                                            <input type="text"
                                                   name="MatrizA[@i,@j]"
                                                   class="form-control form-control-sm text-center matrix-input"
                                                   inputmode="numeric"
                                                   pattern="-?[0-9]*"
                                                   autocomplete="off"
                                                   value="@(Model.MatrizA != null ? Model.MatrizA[i,j].ToString() : "")" />
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Campo do escalar -->
        <div class="row justify-content-center mb-4">
            <div class="col-auto text-center">
                <label class="form-label d-block">Escalar</label>
                <input type="text"
                       name="Escalar"
                       class="form-control text-center escalar-input"
                       inputmode="numeric"
                       pattern="-?[0-9]*"
                       value="@(Model.Escalar != 0 ? Model.Escalar.ToString() : "")"/>
            </div>
        </div>

        <!-- Botão Multiplicar -->
        <div class="text-center mb-4">
            <button name="operacao" value="multiplicar" class="btn btn-primary">
                Multiplicar
            </button>
        </div>
    }

</form>

@if (Model.Resultado != null && Model.Operacao != null &&
    Model.Operacao.Equals("multiplicar", System.StringComparison.OrdinalIgnoreCase))
{
    <hr />

    <h5 class="text-center">Resultado (Multiplicação Escalar)</h5>

    <div class="d-flex justify-content-center">
        <table class="table table-bordered text-center mx-auto w-auto result-table">
            <tbody>
                @for (int i = 0; i < Model.Linhas; i++)
                {
                    <tr>
                        @for (int j = 0; j < Model.Colunas; j++)
                        {
                            <td>@Model.Resultado[i, j]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<script>
    function preencherAleatorio() {
        // intervalo dos valores aleatórios (ajusta conforme necessário)
        const min = -9;
        const max = 9;

        const inputs = document.querySelectorAll('input[name^="MatrizA"]');

        inputs.forEach(input => {
            const valor = Math.floor(Math.random() * (max - min + 1)) + min;
            input.value = valor;
        });
    }
</script>
