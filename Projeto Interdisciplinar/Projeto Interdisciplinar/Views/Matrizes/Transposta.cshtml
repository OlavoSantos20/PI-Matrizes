@model MatrizViewModel

@{
    ViewData["Title"] = "Matriz Transposta";
    Layout = "_LayoutMatrizes";
}

<style>
    .matrix-input {
        min-width: 52px;
        padding: 4px;
        box-sizing: border-box;
    }

    .matrix-table td {
        padding: 4px;
        vertical-align: middle;
        background-color: white;
    }

    .matrix-wrap {
        overflow: auto;
    }

    .result-table {
        max-width: 600px;
        background-color: white;
    }

    .file-input-sm {
        height: 40px;
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 2.2;
    }
</style>

<h3 class="mb-4 text-center">Matriz Transposta</h3>

<div class="row justify-content-center">
    <div class="col-auto">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
</div>

<form method="post" enctype="multipart/form-data" class="text-center">

    <!-- Dimensões -->
    <div class="row justify-content-center mb-4 text-center">
        <div class="col-auto">
            <label class="form-label d-block">Linhas</label>
            <input type="number"
                   name="Linhas"
                   class="form-control text-center"
                   min="1" max="30"
                   value="@(Model.Linhas > 0 ? Model.Linhas : "")"
                   />
        </div>

        <div class="col-auto">
            <label class="form-label d-block">Colunas</label>
            <input type="number"
                   name="Colunas"
                   class="form-control text-center"
                   min="1" max="30"
                   value="@(Model.Colunas > 0 ? Model.Colunas : "")"
                   />
        </div>

        <div class="col-auto d-flex align-items-end">
            <button type="submit" class="btn btn-primary" style="margin-right:5px;">
                Criar Matrizes
            </button>
            <button type="button"
                    class="btn btn-secondary me-2"
                    onclick="preencherAleatorio()">
                Preencher Aleatoriamente <i class="bi bi-pencil"></i>
            </button>
        </div>
    </div>
    <div class="col-auto d-flex justify-content-center mb-4 text-center">
        <input type="file" name="importFile" accept=".json,application/json" class="form-control form-control-sm file-input-sm d-inline-block me-2" style="width:auto" />
        <button type="submit" name="import" value="MatrizA" class="btn btn-outline-secondary me-1">Importar Matriz (JSON)</button>
    </div>

    @if (Model.Linhas > 0 && Model.Colunas > 0)
    {
        <div class="row justify-content-center mb-3 text-center">
            <div class="col-auto">
                <h5>Matriz A</h5>
                <button type="submit" name="export" value="MatrizA" class="btn btn-outline-secondary btn-sm ms-2">
                    Exportar (JSON)
                </button>
                <div class="matrix-wrap">
                    <table class="table table-bordered mx-auto matrix-table">
                        <tbody>
                            @for (int i = 0; i < Model.Linhas; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < Model.Colunas; j++)
                                    {
                                        <td>
                                            <input type="text"
                                                   name="MatrizA[@i,@j]"
                                                   class="form-control form-control-sm text-center matrix-input"
                                                   value="@(Model.MatrizA != null ? Model.MatrizA[i,j] : "")" />
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="text-center mb-4">
            <button name="operacao" value="transposta" class="btn btn-primary">
                Calcular Transposta
            </button>
        </div>
    }

</form>

@if (Model.Resultado != null && Model.Operacao == "transposta")
{
    <hr />

    <h5 class="text-center">Matriz Transposta</h5>

    <div class="d-flex justify-content-center">
        <table class="table table-bordered text-center mx-auto result-table">
            <tbody>
                @for (int i = 0; i < Model.Resultado.GetLength(0); i++)
                {
                    <tr>
                        @for (int j = 0; j < Model.Resultado.GetLength(1); j++)
                        {
                            <td>@Model.Resultado[i, j]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<script>
    function preencherAleatorio() {
        const min = -9;
        const max = 9;
        document.querySelectorAll('input[name^="MatrizA"]').forEach(i => {
            i.value = Math.floor(Math.random() * (max - min + 1)) + min;
        });
    }
</script>
