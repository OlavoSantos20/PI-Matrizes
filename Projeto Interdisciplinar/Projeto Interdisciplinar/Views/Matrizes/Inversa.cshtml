@model Projeto_Interdisciplinar.Models.MatrizViewModel

@{
    ViewData["Title"] = "Matriz Inversa";
    Layout = "_LayoutMatrizes";
}

<style>
    .matrix-input {
        min-width: 52px;
        padding: 4px;
        box-sizing: border-box;
    }

    .matrix-table td {
        padding: 4px;
        vertical-align: middle;
        background-color: white;
    }

    .matrix-wrap {
        overflow: auto;
    }

    .result-table {
        max-width: 800px;
        background-color: white;
    }
</style>

<h3 class="mb-4 text-center">Matriz Inversa</h3>

@* Mostrar erros de validação *@
<div class="row justify-content-center">
    <div class="col-auto">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
</div>

<form method="post" class="text-center">

    <!-- Dimensões (centradas) -->
    <div class="row justify-content-center mb-4 text-center">
        <div class="col-auto">
            <label class="form-label d-block">Linhas / Colunas</label>
            <input type="number"
                   name="Linhas"
                   class="form-control text-center"
                   min="1" max="30"
                   value="@(Model.Linhas > 0 ? Model.Linhas.ToString() : "")"
                   required />
        </div>

        <div class="col-auto d-flex align-items-end">
            <button type="submit" class="btn btn-primary" style="margin-right:5px;">
                Criar Matriz
            </button>

            <button type="button"
                    class="btn btn-secondary"
                    onclick="preencherAleatorio()">
                Preencher Aleatoriamente
            </button>
        </div>
    </div>

    @if (Model.Linhas > 0 && Model.Colunas > 0)
    {
        <div class="row justify-content-center mb-3 text-center">
            <div class="col-auto">
                <h5>Matriz A (@Model.Linhas x @Model.Colunas)</h5>
                <div class="matrix-wrap">
                    <table class="table table-bordered text-center mx-auto matrix-table">
                        <tbody>
                            @for (int i = 0; i < Model.Linhas; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < Model.Colunas; j++)
                                    {
                                        <td>
                                            <input type="text"
                                                   name="MatrizA[@i,@j]"
                                                   class="form-control form-control-sm text-center matrix-input"
                                                   inputmode="numeric"
                                                   pattern="-?[0-9]*"
                                                   autocomplete="off"
                                                   value="@(Model.MatrizA != null ? Model.MatrizA[i,j].ToString() : "")" />
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Botão Calcular -->
        <div class="text-center mb-4">
            <button name="operacao" value="inversa" class="btn btn-primary">
                Calcular Inversa
            </button>
        </div>
    }

</form>

@if (Model.Inversa != null && Model.Operacao != null &&
   Model.Operacao.Equals("inversa", System.StringComparison.OrdinalIgnoreCase))
{
    <hr />

    <h5 class="text-center">Inversa</h5>

    <div class="d-flex justify-content-center">
        <table class="table table-bordered text-center mx-auto result-table">
            <tbody>
                @for (int i = 0; i < Model.Inversa.GetLength(0); i++)
                {
                    <tr>
                        @for (int j = 0; j < Model.Inversa.GetLength(1); j++)
                        {
                            <td>@Model.Inversa[i, j].ToString("F6")</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<script>
    function preencherAleatorio() {
        const min = -9;
        const max = 9;
        const inputs = document.querySelectorAll('input[name^="MatrizA"]');

        inputs.forEach(input => {
            const valor = Math.floor(Math.random() * (max - min + 1)) + min;
            input.value = valor;
        });
    }
</script>
